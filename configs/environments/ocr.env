# OCR-specific environment configuration
# Additional OCR settings for different deployment environments

# ===========================================
# DEVELOPMENT ENVIRONMENT
# ===========================================
[development]
# Lower OCR confidence threshold for testing
OCR_CONFIDENCE_THRESHOLD=50
OCR_MAX_CONCURRENT_PAGES=1
OCR_PROCESSING_TIMEOUT=300

# Enable more detailed logging
OCR_DEBUG_MODE=true
OCR_SAVE_PROCESSED_IMAGES=true
OCR_LOG_CONFIDENCE_DISTRIBUTION=true

# Reduced quality thresholds for development
AGENTIC_MIN_CHUNK_CONFIDENCE=0.6
AGENTIC_COVERAGE_THRESHOLD=0.75

# ===========================================
# STAGING ENVIRONMENT
# ===========================================
[staging]
# Moderate OCR settings
OCR_CONFIDENCE_THRESHOLD=60
OCR_MAX_CONCURRENT_PAGES=2
OCR_PROCESSING_TIMEOUT=240

# Balanced quality settings
AGENTIC_MIN_CHUNK_CONFIDENCE=0.7
AGENTIC_COVERAGE_THRESHOLD=0.8

# Cost monitoring
MONTHLY_BUDGET_ALERT_USD=50

# ===========================================
# PRODUCTION ENVIRONMENT
# ===========================================
[production]
# Strict OCR settings for quality
OCR_CONFIDENCE_THRESHOLD=70
OCR_MAX_CONCURRENT_PAGES=5
OCR_PROCESSING_TIMEOUT=180

# High quality requirements
AGENTIC_MIN_CHUNK_CONFIDENCE=0.75
AGENTIC_COVERAGE_THRESHOLD=0.85

# Performance monitoring
LOG_SLOW_PAGES_THRESHOLD_SECONDS=45
ALERT_ON_LOW_CONFIDENCE_RATIO=0.25

# Cost controls
MONTHLY_BUDGET_ALERT_USD=2000
DAILY_TOKEN_LIMIT=150000

# ===========================================
# OCR SYSTEM PATHS BY OS
# ===========================================
[linux]
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/4.00/tessdata
OCR_TEMP_DIR=/tmp/ocr

[windows]
TESSERACT_PATH=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
TESSERACT_DATA_PATH=C:\\Program Files\\Tesseract-OCR\\tessdata
OCR_TEMP_DIR=C:\\temp\\ocr

[macos]
TESSERACT_PATH=/opt/homebrew/bin/tesseract
TESSERACT_DATA_PATH=/opt/homebrew/share/tessdata
OCR_TEMP_DIR=/tmp/ocr

# ===========================================
# DOCKER DEPLOYMENT
# ===========================================
[docker]
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/4.00/tessdata
OCR_TEMP_DIR=/tmp/ocr

# Docker-specific paths
DOCKER_DATA_PATH=/app/data
DOCKER_UPLOAD_PATH=/app/uploads
DOCKER_LOG_PATH=/app/logs

# Container resource limits
OCR_MAX_CONCURRENT_PAGES=3
OCR_MAX_IMAGE_SIZE_MB=100